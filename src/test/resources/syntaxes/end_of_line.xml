<?xml version="1.0" encoding="UTF-8" ?>
<syntax>
  <templates>
    <createTable>
      CREATE TABLE ${table_name} (${column_definitions} ${end_of_block_constraints});
    </createTable>
    <columnDefinition>
      ${column_name} ${column_type} ${column_default} ${end_of_line_constraints}
    </columnDefinition>
    <notNullConstraint strategy="END_OF_LINE">
      EXAMPLE_NOT_NULL_CONSTRAINT
    </notNullConstraint>
    <primaryKeyConstraint strategy="END_OF_LINE">
      EXAMPLE_PRIMARY_KEY_CONSTRAINT
    </primaryKeyConstraint>
    <foreignKeyConstraint strategy="END_OF_LINE">
      EXAMPLE_FOREIGN_KEY_CONSTRAINT
    </foreignKeyConstraint>
    <uniqueConstraint strategy="END_OF_LINE">
      EXAMPLE_UNIQUE_CONSTRAINT
    </uniqueConstraint>
    <columnDefault>
      DEFAULT '${default_value}'
    </columnDefault>
    <selectData>
      SELECT ${column_names} FROM ${table_name};
    </selectData>
    <insertData>
      INSERT INTO ${table_name} (${column_names}) VALUES (${column_values});
    </insertData>
  </templates>
</syntax>