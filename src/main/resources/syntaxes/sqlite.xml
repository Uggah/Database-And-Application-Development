<?xml version="1.0" encoding="UTF-8" ?>
<syntax xmlns:xsi="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="schema.xsd">
  <tableCreation>
    <options>
      <inlineConstraintDefinitions>
        ALWAYS
      </inlineConstraintDefinitions>
    </options>
    <templates>
      <createTable>
        CREATE TABLE ${table_name} (${column_definitions} ${end_of_block_constraints});
      </createTable>
      <columnDefinition>
        ${column_name} ${column_type} ${end_of_line_constraints},
      </columnDefinition>
      <inlineConstraints>
        <constraint constraintType="NOT_NULL">
          NOT NULL
        </constraint>
        <constraint constraintType="PRIMARY_KEY" strategy="END_OF_BLOCK">
          PRIMARY KEY (${primary_key_columns}),
        </constraint>
      </inlineConstraints>
    </templates>
  </tableCreation>
</syntax>